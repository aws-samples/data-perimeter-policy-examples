{
    "Version": "2012-10-17",    
    "Statement": [
        {
            "Sid": "DenyS3ServerSideEncryptionCustomer", 
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::<your-bucket-name>/*",
            "Condition": {
                "Null": {
                    "s3:x-amz-server-side-encryption-customer-algorithm": "false"
                }
            }
        }
    ]
 }
