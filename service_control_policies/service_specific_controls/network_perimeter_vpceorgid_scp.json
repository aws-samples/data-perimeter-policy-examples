{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EnforceNetworkPerimeterVpceOrgID",
            "Effect": "Deny",
            "Action": [
                "acm-pca:*",
                "applicationinsights:*",
                "apprunner:*",
                "athena:*",
                "cloudformation:*",
                "comprehendmedical:*",
                "compute-optimizer:*",
                "datasync:*",
                "discovery:*",
                "ebs:*",
                "firehose:*",
                "healthlake:*",
                "iotfleetwise:*",
                "iotwireless:*",
                "kms:*",
                "lambda:*",
                "medical-imaging:*",
                "omics:*",
                "payment-cryptography:*",
                "polly:*",
                "rbin:*",
                "rekognition:*",
                "s3:*",
                "scheduler:*",
                "servicediscovery:*",
                "servicequotas:*",
                "ssm-contacts:*",
                "storagegateway:*",
                "textract:*",
                "transcribe:*",
                "transfer:*"
            ],
            "Resource": "*",
            "Condition": {
                "BoolIfExists": {
                    "aws:ViaAWSService": "false"
                },
                "NotIpAddressIfExists": {
                    "aws:SourceIp": [
                        "<my-corporate-cidr>"
                    ]
                },
                "StringNotEqualsIfExists": {
                    "aws:PrincipalTag/dp:exclude:network": "true",
                    "aws:VpceOrgID": "<my-org-id>",
                    "aws:VpceAccount": [
                        "<third-party-account-a>",
                        "<third-party-account-b>"
                    ]
                },
                "ArnNotLikeIfExists": {
                    "aws:PrincipalArn": [
                        "arn:aws:iam::*:role/aws:ec2-infrastructure"
                    ]
                },
                "StringEquals": {
                    "aws:PrincipalTag/dp:include:network": "true"
                }
            }
        }
    ]
}