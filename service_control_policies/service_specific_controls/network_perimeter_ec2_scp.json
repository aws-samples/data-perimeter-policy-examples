{
   "Version":"2012-10-17",
   "Statement":[
      {
         "Sid":"EnforceNetworkPerimeterOnEC2Roles",
         "Effect":"Deny",
         "NotAction":[
            "es:ES*",
            "dax:GetItem",
            "dax:BatchGetItem",
            "dax:Query",
            "dax:Scan",
            "dax:PutItem",
            "dax:UpdateItem",
            "dax:DeleteItem",
            "dax:BatchWriteItem",
            "dax:ConditionCheckItem",
            "neptune-db:*",
            "kafka-cluster:*",
            "elasticfilesystem:client*",
            "rds-db:connect"
         ],
         "Resource":"*",
         "Condition":{
            "BoolIfExists":{
               "aws:ViaAWSService":"false"
            },
            "NotIpAddressIfExists":{
               "aws:SourceIp":[
                  "<my-corporate-cidr>"
               ]
            },
            "StringNotEqualsIfExists":{
               "aws:PrincipalTag/dp:exclude:network":"true",
               "aws:SourceVpc":[
                  "<my-vpc>"
               ]
            },
            "ArnNotLikeIfExists":{
               "aws:PrincipalArn":[
                  "arn:aws:iam::*:role/aws:ec2-infrastructure"
               ]
            },
            "Null":{
               "ec2:SourceInstanceARN":"false"
            }
         }
      },
      {
         "Sid":"SourceVPCRegion",
         "Effect":"Deny",
         "Action":"*",
         "Resource":"*",
         "Condition":{
            "StringEquals":{
               "aws:SourceVpc":"<my-vpc-in-this-region>"
            },
            "StringNotEqualsIfExists":{
               "aws:RequestedRegion":"<my-vpc-region>"
            }
         }
      }
   ]
}